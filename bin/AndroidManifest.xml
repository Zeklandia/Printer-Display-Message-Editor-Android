<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="zeklandia.android.printerDisplayMessageEditor"
      android:versionCode="2"
      android:versionName="1.0.1">
      
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    
    <uses-sdk android:minSdkVersion="15" android:targetSdkVersion="19"/>
    
    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme" android:allowBackup="true">
        <activity android:name="zeklandia.android.printerDisplayMessageEditor.MainActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="zeklandia.android.printerDisplayMessageEditor.PrinterSettingsFragment"
                  android:label="@string/help_title"/>
        <activity android:name="zeklandia.android.printerDisplayMessageEditor.PrinterSettingsStorage"
                  android:label="@string/about_title"/>
        <activity android:name="zeklandia.android.printerDisplayMessageEditor.PrinterSettingsActivity"
                  android:label="@string/action_settings"/>
    </application>

</manifest> 